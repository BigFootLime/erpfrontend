{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/renderer/src/@/componentsui/ui/badge.tsx"
  ],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@components/*": ["src/renderer/src/@/componentsui/ui/*"]
    }
  }
}
